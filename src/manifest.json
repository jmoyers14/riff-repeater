{
    "manifest_version": 3,
    "name": "Riff Repeater",
    "version": "0.0.1",
    "description": "Create hotkeys for YouTube video timestamps to easily repeat sections of the video.",
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/*.svg", "assets/images/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
