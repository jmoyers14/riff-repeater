{
    "manifest_version": 3,
    "name": "Repeat Riff",
    "version": "1.0.0",
    "description": "Repeat YouTube videos",
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
