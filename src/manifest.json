{
    "manifest_version": 3,
    "name": "Riff Repeater",
    "version": "1.0.0",
    "description": "Repeat YouTube videos",
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/*.svg", "assets/images/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
